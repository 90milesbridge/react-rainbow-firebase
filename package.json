{
  "name": "react-rainbow-firebase",
  "version": "0.1.0",
  "description": "React Rainbow Firebase",
  "keywords": [
    "react",
    "components",
    "library",
    "rainbow",
    "firebase"
  ],
  "main": "components/index.js",
  "authors": [
    "Reinier Guerra",
    "Leandro Torres"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/90milesbridge/react-rainbow-firebase.git"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.11",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-json-view": "^1.19.1",
    "react-rainbow-components": "^1.3.0",
    "react-redux": "^7.0.3",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "npx styleguidist server",
    "build": "npx babel ./src --out-dir ./components",
    "build:library": "npx styleguidist build",
    "test": "react-scripts test",
    "test:ci": "CI=true yarn test",
    "lint": "eslint src",
    "eject": "react-scripts eject",
    "deploy:library": "yarn build:library && firebase deploy",
    "clean": "rm -Rf components",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "firebase": "^6.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "8.0.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "firebase": "^6.0.2",
    "firebase-tools": "^6.9.2",
    "pre-push": "^0.1.1",
    "react-rainbow-styleguide": "^1.1.0",
    "react-styleguidist": "^7.3.9"
  },
  "pre-push": [
    "lint",
    "test:ci"
  ]
